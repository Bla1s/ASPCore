@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Access Denied</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">You do not have permission to access this page. Please log out and log in with an account that has the necessary permissions.</p>
                    <button onclick="window.history.back();" class="btn btn-primary">Go Back</button>
                </div>
            </div>
        </div>
    </div>
</div>