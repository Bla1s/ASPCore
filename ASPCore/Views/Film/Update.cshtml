@model ASPCore.Models.Film
@{
ViewData["Title"] = "Update";
}

<h1>Update Film</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">
	<input type="hidden" asp-for="Id" />
	<div>
		<label asp-for="Name"></label>
		<input asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>
	<div>
		<label asp-for="AuthorId"></label>
		<select asp-for="AuthorId" asp-items="ViewBag.Authors"></select>
		<span asp-validation-for="AuthorId"></span>
	</div>
	<div>
		<label asp-for="ReleaseDate"></label>
		<input asp-for="ReleaseDate" />
		<span asp-validation-for="ReleaseDate"></span>
	</div>
	<div>
		<label asp-for="Category"></label>
		<select asp-for="Category">
			@foreach (var category in Enum.GetValues(typeof(ASPCore.Models.Category)))
			{
				<option value="@category">@category</option>
			}
		</select>
		<span asp-validation-for="Category"></span>
	</div>
	<div>
		<label asp-for="Description"></label>
		<input asp-for="Description" />
		<span asp-validation-for="Description"></span>
	</div>
	@*<div>
		<label asp-for="StarRating"></label>
		<input asp-for="StarRating" />
		<span asp-validation-for="StarRating"></span>
	</div>*@
	<button type="submit">Update</button>
</form>