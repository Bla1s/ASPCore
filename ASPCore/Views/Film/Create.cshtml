@model ASPCore.Models.FilmViewModel
@{
ViewData["Title"] = "Create";
}

<h1>Add Film</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div>
		<label asp-for="Name"></label>
		<input asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>
	<div>
		<label asp-for="AuthorId"></label>
		<select asp-for="AuthorId" asp-items="ViewBag.Authors"></select>
		<span asp-validation-for="AuthorId"></span>
	</div>
	<div>
		<label asp-for="ReleaseDate"></label>
		<input asp-for="ReleaseDate" />
		<span asp-validation-for="ReleaseDate"></span>
	</div>
	<div>
		<label asp-for="Category"></label>
		<select asp-for="Category">
			@foreach (var category in Enum.GetValues(typeof(ASPCore.Models.Category)))
			{
				<option value="@category">@category</option>
			}
		</select>
		<span asp-validation-for="Category"></span>
	</div>
	<div>
		<label asp-for="Description"></label>
		<input asp-for="Description" />
		<span asp-validation-for="Description"></span>
	</div>
	<div class="form-group">
		<label asp-for="Image" class="control-label"></label>
		<input asp-for="Image" type="file" class="form-control" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>

	<button type="submit">Add</button>
</form>