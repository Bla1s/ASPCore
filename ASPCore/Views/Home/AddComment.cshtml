@model ASPCore.Models.CommentViewModel
@{
ViewData["Title"] = "AddComment";
}
<h2>Add Comment</h2>

<form asp-action="AddComment" asp-controller="Home" method="post">
	<input type="hidden" name="filmId" value="@Model.FilmId" />

	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>

	<div class="form-group">
		<label asp-for="StarRating"></label>
		<input type="number" asp-for="StarRating" class="form-control" min="1" max="5" />
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>